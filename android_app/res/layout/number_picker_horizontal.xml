<?xml version="1.0" encoding="utf-8"?>

<merge xmlns:android="http://schemas.android.com/apk/res/android">

	<view
		class="de.viktorreiser.toolbox.widget.NumberPicker$NumberPickerButton"
		android:id="@+id/decrement"
		android:layout_width="60dip"
		android:layout_height="fill_parent"
		android:background="@drawable/timepicker_left_btn" />

	<EditText
		android:id="@+id/timepicker_input"
		android:layout_width="wrap_content"
		android:layout_height="fill_parent"
		android:gravity="center"
		android:singleLine="true"
		style="?android:attr/textAppearanceLargeInverse"
		android:textColor="@android:color/primary_text_light"
		android:textSize="30sp"
		android:background="@drawable/timepicker_input" />

	<view
		class="de.viktorreiser.toolbox.widget.NumberPicker$NumberPickerButton"
		android:id="@+id/increment"
		android:layout_width="60dip"
		android:layout_height="fill_parent"
		android:background="@drawable/timepicker_right_btn" />

</merge>
