<?xml version="1.0" encoding="utf-8"?>
<Addin 
    id="Banshee.RemoteListener"
    version="2.0"
    compatVersion="1.0"
    copyright=""
    name="Remote Listener"
    category="Remote Control"
    description="Remote Listener allows controlling Banshee from another device on your local network."
    author="Viktor Reiser/Nikitas Stamatopoulos/Kristopher Dick"
    url="https://launchpad.net/banshee-remote-plugin"
    defaultEnabled="true">

  <Dependencies>
    <Addin id="Banshee.Services" version="1.0"/>
  </Dependencies>

  <Extension path="/Banshee/ServiceManager/Service">
    <Service class="Banshee.RemoteListener.RemoteListenerService"/>
  </Extension>

</Addin>
